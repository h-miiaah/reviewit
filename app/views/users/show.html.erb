<div class="row">
    <div class="col"></div>
        <div class="col-md-6">

            <h1 class="text-center">Welcome <%= @user.username %>!</h1>
            <div>
                <table class="table table-hover table-bordered table-striped table-responsive-xs">
                    <thead>
                        <tr>
                            <th colspan="5" class="text-center"><%= @user.username %>'s Reviews</th>
                        </tr>
                        <tr>
                            <th>Product</th>
                            <th>Review</th>
                            <th>Rating</th>
                            <th colspan="2">Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @user.reviews.each do |review| %>
                            <tr>
                                <td><strong><%= link_to review.product.name, review_path(review) %></strong></td>
                                <td><%= review.title %></td>
                                <td><%= review.stars%> Stars</td>
                                <% if review.user_id == current_user.id %>
                                <td><%= link_to "Edit", edit_review_path(review), class:'btn btn-sm btn-warning' %></td>
                                <td><%= link_to "Delete", review_path(review), method: :delete, class:'btn btn-sm btn-danger' %></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
            </table>
            </div>
                   
        </div><!-- col-md-6 -->
    <div class="col"></div>
</div><!-- .row -->