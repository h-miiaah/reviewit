<div class="row">
    <div class="col"></div>
        <div class="col-md-10">

            <h1 class="text-center">All Reviews</h1>

            <div>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Review</th>
                            <th>Rating</th>
                            <th colspan="3">Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @reviews.each do |review| %>
                            <tr>
                                <td><%= review.product.name %></td>
                                <td><%= review.title %></td>
                                <td><%= review.stars %> Stars</td>
                                <td><%= link_to 'Show', review_path(review), class:'btn btn-sm btn-info' %></td>
                                <% if review.user_id == current_user.id %>
                                <td><%= link_to 'Edit', edit_review_path(review), class:'btn btn-sm btn-warning' %></td>
                                <td><%= link_to 'Delete', review_path(review), method: :delete, class:'btn btn-sm btn-danger' %></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
            </table>
            </div>

        </div><!-- col-md-10 -->
    <div class="col"></div>
</div><!-- .row -->