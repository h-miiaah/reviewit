<h1>All Reviews</h1>

<div>
    <table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Review</th>
            <th>Rating</th>
            <th colspan="1"></th>
        </tr>
    </thead>

    <tbody>
        <% @reviews.each do |review| %>
            <tr>
                <td><%= review.product.name %></td>
                <td><%= link_to review.title, review_path(review) %></td>
                <td><%= review.stars %> Stars</td>
                <td><%= review.content %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>