<h1>All Reviews</h1>

<div>
    <table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Review</th>
            <th>Rating</th>
            <th colspan="3">Options</th>
        </tr>
    </thead>

    <tbody>
        <% @reviews.each do |review| %>
            <tr>
                <td><%= review.product.name %></td>
                <td><%= review.title %></td>
                <td><%= review.stars %> Stars</td>
                <td><%= link_to 'Show', review_path(review) %></td>
                <% if review.user_id == current_user.id %>
                <td><%= link_to 'Edit', edit_review_path(review) %></td>
                <td><%= link_to 'Delete', review_path(review), method: :delete %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
</div>