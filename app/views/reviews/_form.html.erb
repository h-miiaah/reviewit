<%= render partial: 'layouts/errors', locals: {object: @review} %>

<div>
    <%= form_for(@review) do |f| %>
        <% if params[:product_id] %>
            <%= f.hidden_field :product_id %>
        <% else %>
            <div>
            <%= f.label :product_id, "Select Product" %>
            <%= f.collection_select :product_id, Product.all.alphabetically, :id, :product_and_category, include_blank: true %>
            </div>
        <% end %>
        <br>

        <%= f.label :stars %>
        <%= f.number_field :stars, min: 0, max: 5 %>
        <br>

        <%= f.label :title %>
        <%= f.text_field :title %>
        <br>

        <%= f.label :content %>
        <%= f.text_area :content, size: "40x10" %>
        <br>

        <%= f.submit %>

    <% end %>
</div>