<div class="row">
    <div class="col"></div>
        <div class="col-md-4">

            <%= render partial: 'layouts/errors', locals: {object: @review} %>

            <div>
                <%= form_for(@review) do |f| %>
                    <% if params[:product_id] %>
                        <%= f.hidden_field :product_id %>
                    <% else %>
                        <div>
                        <%= f.label :product_id, "Select Product" %>
                        <%= f.collection_select :product_id, Product.all.alphabetically, :id, :product_and_category, include_blank: true, class: 'form-control' %>
                        </div>
                    <% end %>
                    <br>

                    <%= f.label :stars %>
                    <%= f.number_field :stars, min: 0, max: 5, class: 'form-control' %>
                    <br>

                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control' %>
                    <br>

                    <%= f.label :content %>
                    <%= f.text_area :content, size: "40x10", class: 'form-control' %>
                    <br>

                    <%= f.submit class:'btn btn-sm btn-success' %>

                <% end %>
            </div>

        </div><!-- col-md-4 -->
    <div class="col"></div>
</div><!-- .row -->